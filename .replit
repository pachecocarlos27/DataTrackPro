modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_pipeline_example"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dashboard_demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "prometheus_demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "package_test"

[[workflows.workflow]]
name = "run_pipeline_example"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python examples/basic_usage.py"

[[workflows.workflow]]
name = "dashboard_demo"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pipeline-dashboard"
waitForPort = 5000

[[workflows.workflow]]
name = "prometheus_demo"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python examples/prometheus_demo.py"
waitForPort = 5001

[[workflows.workflow]]
name = "package_test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -e ."

[deployment]
run = ["sh", "-c", "python examples/basic_usage.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
